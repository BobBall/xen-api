#!/usr/bin/env ocaml

#use "topfind"
#require "cmdliner"

let config_mk = "config.mk"
let fhs_ml = "ocaml/fhs.ml"

(* Configure script *)
open Cmdliner

let dir name default docv doc = 
  let doc = Printf.sprintf "Set the directory for installing %s" doc in
  Arg.(value & opt string default & info [name] ~docv ~doc)

let vardir = dir "vardir" "/var/lib/xcp" "VARDIR" "global persistent state files"
let varpatchdir = dir "varpatchdir" "/var/lib/xcp/patch" "VARPATCHDIR" "hotfixes"
let etcdir = dir "etcdir" "/etc/xcp" "ETCDIR" "configuration files"
let optdir = dir "optdir" "/usr/lib/xcp" "OPTDIR" "system files"
let plugindir = dir "plugindir" "/usr/lib/xcp/plugins" "PLUGINDIR" "xapi plugins"
let hooksdir = dir "hooksdir" "/etc/xcp/hook-scripts" "HOOKSDIR" "hook scripts"
let xapiconf = dir "xapiconf" "/etc/xcp/xapi.conf" "XAPICONF" "xapi master config file"
let rrddconf = dir "rrddconf" "/etc/xcp/rrdd.conf" "RRDDCONF" "rrdd master config file"
let libexecdir = dir "libexecdir" "/usr/lib/xcp/lib" "LIBEXECDIR" "utility binaries"
let scriptsdir = dir "scriptsdir" "/usr/lib/xcp/scripts" "SCRIPTSDIR" "utility scripts"
let sharedir = dir "sharedir" "/usr/share/xcp" "SHAREDIR" "shared binary files"
let webdir = dir "webdir" "/var/www/html" "WEBDIR" "html files"
let xhadir = dir "xhadir" "/opt/xensource/xha" "XHADIR" "HA daemon"
let bindir = dir "bindir" "/usr/bin" "BINDIR" "binaries"
let sbindir = dir "sbindir" "/usr/sbin" "BINDIR" "system binaries"
let udevdir = dir "udevdir" "/lib/udev" "UDEVDIR" "udev scripts"

let info =
  let doc = "Configures a package" in
  Term.info "configure" ~version:"0.1" ~doc 

let output_file filename lines =
  let oc = open_out filename in
  let lines = List.map (fun line -> line ^ "\n") lines in
  List.iter (output_string oc) lines;
  close_out oc

let configure vardir varpatchdir etcdir optdir plugindir hooksdir xapiconf rrddconf libexecdir scriptsdir sharedir webdir xhadir bindir sbindir udevdir =
  Printf.printf "Configuring with the following params:\n\tvardir=%s\n\tvarpatchdir=%s\n\tetcdir=%s\n\toptdir=%s\n\tplugindir=%s\n\thooksdir=%s\n\txapiconf=%s\n\trrddconf=%s\n\tlibexecdir=%s\n\tscriptsdir=%s\n\tsharedir=%s\n\twebdir=%s\n\txhadir=%s\n\tbindir=%s\n\tsbindir=%s\n\tudevdir=%s\n\n" vardir varpatchdir etcdir optdir plugindir hooksdir xapiconf rrddconf libexecdir scriptsdir sharedir webdir xhadir bindir sbindir udevdir;

  (* Write config.mk *)
  let lines = 
    [ "# Warning - this file is autogenerated by the configure script";
      "# Do not edit";
      Printf.sprintf "VARDIR=%s" vardir;
      Printf.sprintf "VARPATCHDIR=%s" varpatchdir;
      Printf.sprintf "ETCDIR=%s" etcdir;
      Printf.sprintf "OPTDIR=%s" optdir;
      Printf.sprintf "PLUGINDIR=%s" plugindir;
      Printf.sprintf "HOOKSDIR=%s" hooksdir;
      Printf.sprintf "XAPICONF=%s" xapiconf;
      Printf.sprintf "RRDDCONF=%s" rrddconf;
      Printf.sprintf "LIBEXECDIR=%s" libexecdir;
      Printf.sprintf "SCRIPTSDIR=%s" scriptsdir;
      Printf.sprintf "SHAREDIR=%s" sharedir;
      Printf.sprintf "WEBDIR=%s" webdir;
      Printf.sprintf "XHADIR=%s" xhadir;
      Printf.sprintf "BINDIR=%s" bindir;
      Printf.sprintf "SBINDIR=%s" sbindir;
      Printf.sprintf "UDEVDIR=%s" udevdir
    ] in
  output_file config_mk lines;

  let fhs_lines = 
    [ "(* Warning - this file is autogenerated by the configure script *)";
      "(* Do not edit *)";    
      Printf.sprintf "let vardir=\"%s\"" vardir;
      Printf.sprintf "let etcdir=\"%s\"" etcdir;
      Printf.sprintf "let optdir=\"%s\"" optdir;
      Printf.sprintf "let plugindir=\"%s\"" plugindir;
      Printf.sprintf "let hooksdir=\"%s\"" hooksdir;
      Printf.sprintf "let libexecdir=\"%s\"" libexecdir;
      Printf.sprintf "let xapiconf=\"%s\"" xapiconf;
      Printf.sprintf "let rrddconf=\"%s\"" rrddconf;
      Printf.sprintf "let scriptsdir=\"%s\"" scriptsdir;
      Printf.sprintf "let varpatchdir=\"%s\"" varpatchdir;
      Printf.sprintf "let webdir=\"%s\"" webdir;
      Printf.sprintf "let xhadir=\"%s\"" xhadir;
      Printf.sprintf "let bindir=\"%s\"" bindir;
      Printf.sprintf "let sbindir=\"%s\"" sbindir;
      Printf.sprintf "let sharedir=\"%s\"" sharedir ]
  in
  output_file fhs_ml fhs_lines

let configure_t = Term.(pure configure $ vardir $ varpatchdir $ etcdir $ optdir $ plugindir $ hooksdir $ xapiconf $ rrddconf $ libexecdir $ scriptsdir $ sharedir $ webdir $ xhadir $ bindir $ sbindir $ udevdir )

let () = 
  match 
    Term.eval (configure_t, info) 
  with
  | `Error _ -> exit 1 
  | _ -> exit 0
